@model StoreOwner
@{
    var successMess = TempData["SuccessMessage"] as string;

    var errorMess = TempData["ErrorMessage"] as string;

    var sessionData = TempData["SessionData"] as string;
}
@if (!string.IsNullOrEmpty(successMess))
{
    <div class="alert alert-success" role="alert">
        @successMess
    </div>
    <div class="alert alert-primary" role="alert">
        Stored session: @sessionData
    </div>
}
@if (!string.IsNullOrEmpty(errorMess))
{
    <div class="alert alert-danger" role="alert">
        @errorMess
    </div>
}
<div class="container">
    <div class="row">
        <div class="card p-2 m-3 bg-dark text-white" style="width: 18rem;">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
                <h3 class="card-title">Store name</h3>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
        </div>
        @if (Model.Name != null)
        {
            <div class="p-2">
                <h5>@Model.Name</h5>
            </div>
        }
        <div class="p-2">
            <h5>Current campaigns</h5>
        </div>
    </div>
</div>
