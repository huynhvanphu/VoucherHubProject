@page
@{
    var successMess = TempData["SuccessMessage"] as string;

    var errorMess = TempData["ErrorMessage"] as string;

    var sessionData = TempData["SessionData"] as string;
}
@if (!string.IsNullOrEmpty(successMess))
{
    <div class="alert alert-success" role="alert">
        @successMess
    </div>
    <div class="alert alert-primary" role="alert">
        Stored session: @sessionData
    </div>
}
@if (!string.IsNullOrEmpty(errorMess))
{
    <div class="alert alert-danger" role="alert">
        @errorMess
    </div>
}
<div id="customer_login" class="mt-5">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" asp-controller="StoreOwner" asp-action="StoreOwnerLogin" method="post">
                        <h3 class="text-center">Store Owner Login</h3>
                        <div class="form-group">
                            <label for="username">Username:</label><br>
                            <input type="text" name="username" id="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label><br>
                            <input type="text" name="password" id="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="remember-me"><span>Remember me</span> <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                            <input type="submit" name="submit" class="btn btn-primary btn-md" value="submit">
                        </div>
                        <div id="register-link" class="text-right">
                            <a href="#" class="text-primary">Register for Store Owner here</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>